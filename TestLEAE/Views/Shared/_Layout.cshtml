@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf8" />
    <title>Home page</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-action="Index" asp-controller="Home">Тестовое задание «Теледок»</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="SearchClient" asp-controller="Home" id="findClientLink">Просмотр клиентов</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="CreateClient" asp-controller="Home" id="addClientLink">Добавить клиента</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="CreateFounder" asp-controller="Home" id="addFounderLink">Добавить учредителя</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderSection("Content", required: false)
    </div>

    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>