@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Content {
    @using TestLEAE.ModelsView;
    @model IEnumerable<ClientView>
    
    <p>Просмотр клиентов</p>
    @if (Model != null)
    {
    <ul class="card-body">
        @foreach (ClientView client in @Model)
        {
            <li class="card-title" id="client-name">Имя - @client.Name</li>
            <li class="card-text" id="client-inn">ИНН - @client.Inn</li>
            <li class="card-text" id="client-dateToAdd">Дата добавления - @client.DateToAdd</li>
            <li class="card-text" id="client-dateToUpdate">Дата обновления - @client.DateToUpdate</li>
            <li><a method="get" class="card-text" asp-action="GetFounder" asp-controller="Home" id="getFounderLink">Учредители</a></li>
        }
    </ul>
    }
}


