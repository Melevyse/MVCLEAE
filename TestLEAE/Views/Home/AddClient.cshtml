@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Content {
    @model TestLEAE.ModelsView.ClientView

    <p>Добавить нового пользователя</p>

    <form method="post" action="@Url.Action("AddClient", "HomeController")">

        <label for="name">Имя:</label>
        <input asp-for="name" type="text" id="name" name="name" />

        <label for="inn">ИНН:</label>
        <input asp-for="inn" type="text" id="inn" name="inn" />

        <label for="clientType">Тип клиента:</label>
        <select asp-for="type" id="clientType" name="type">
            <option value="LegalEntities">Юридическое лицо</option>
            <option value="IndividualEntrepreneurs">Индивидуальный предприниматель</option>
        </select>

        <button type="submit" id="postClientsButton">Добавить клиента</button>
    </form>
}


